# GMX Email Configuration
GMX_EMAIL=your_gmx_email@gmx.com
GMX_PASSWORD=your_gmx_password

# Google AI / Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# AWHEmailScanner Integration
AWH_EMAILSCANNER_PATH=../AWHEmailScanner/src
VALIDATION_DATA_PATH=../AWHEmailScanner/data

# Email Fetching Configuration
EMAIL_FETCH_COUNT=10
DAYS_BACK=1

# Newsletter Sources (comma-separated email addresses to filter)
NEWSLETTER_SOURCES=

# Parser Configuration
# USE_DETERMINISTIC_PARSER: Use fast pattern-based parser (true) or AI parser (false)
USE_DETERMINISTIC_PARSER=true

# Entity Extraction Configuration
# ENTITY_EXTRACTION_BATCH_SIZE: Number of articles to process per API call (1-10)
ENTITY_EXTRACTION_BATCH_SIZE=10

# Article Type Configuration
# ARTICLE_TYPE: Set to "Actual" for production articles, "Testing" for test data
# Default: "Testing" (safer default to avoid polluting production data)
ARTICLE_TYPE=Testing

# DealCloud API Configuration
DEALCLOUD_SITE_URL=your_site.dealcloud.com
DEALCLOUD_CLIENT_ID=your_client_id
DEALCLOUD_CLIENT_SECRET=your_client_secret
